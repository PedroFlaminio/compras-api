generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Produto {
  id            Int             @id @default(autoincrement())
  produto       String
  unidadeMedida String
  categoria     String
  compras       CompraProduto[]

  @@map("produtos")
}

model Compra {
  id            Int             @id @default(autoincrement())
  dataCriada    DateTime        @default(now())
  dataRealizada DateTime?
  titulo        String
  status        String
  produtos      CompraProduto[]
  historico     CompraHistorico[]


  @@map("compras")
}
model CompraHistorico {
  id          Int      @id @default(autoincrement())
  id_compra   Int
  dataAlteracao DateTime @default(now())
  status      String

  compra      Compra   @relation(fields: [id_compra], references: [id])

  @@map("compras_historicos")
}
model CompraProduto {
  id         Int     @id @default(autoincrement())
  id_produto Int
  id_compra  Int
  quantidade Float
  comprado   Boolean @default(false)
  observacao String?

  produto Produto @relation(fields: [id_produto], references: [id])
  compra  Compra  @relation(fields: [id_compra], references: [id])

  @@map("compras_produtos")
}
